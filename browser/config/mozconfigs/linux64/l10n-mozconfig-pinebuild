ac_add_options --enable-update-channel=${MOZ_UPDATE_CHANNEL}
if test "${MOZ_UPDATE_CHANNEL}" = "nightly-pine"; then
  ac_add_options --with-branding=browser/branding/nightly-pinebuild
elif test "${MOZ_UPDATE_CHANNEL}" = "beta-pine"; then
  ac_add_options --with-branding=browser/branding/beta-pinebuild
fi

. "$topsrcdir/build/mozconfig.no-compile"
ac_add_options --disable-nodejs

export MOZILLA_OFFICIAL=1

# Don't autoclobber l10n, as this can lead to missing binaries and broken builds
# Bug 1283438
mk_add_options AUTOCLOBBER=

. "$topsrcdir/build/mozconfig.common.override"
